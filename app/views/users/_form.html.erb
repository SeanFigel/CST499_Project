<div class="container">
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="field">
    <div class="col-md-1">
    <%= f.label :email %>
    </div>
    <div class="col-md-11">
    <%= f.text_field :email %>
    </div>
  </div>
</div>
<div class="row">
  <div class="field">
    <div class="col-md-1">
    <%= f.label :password %>
    </div>
    <div class="col-md-11">
    <%= f.password_field :password %>
    </div>
  </div>
</div>
<div class="row">
  <div class="field">
    <div class="col-md-1">
    <%= f.label :password_confirmation %>
    </div>
    <div class="col-md-11">
    <%= f.password_field :password_confirmation %>
    </div>
  </div>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>